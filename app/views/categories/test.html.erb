<div class="d-flex flex-column justify-content-center align-items-center" id="category-show-wrapper">
  <div class="card d-flex flex-column justify-content-center align-items-center" style="width: 55rem; height: 20rem">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h3 class="card-title" id="entry-content"><%= @task.body %></h3>
    </div>
    <div class="d-flex w-100 justify-content-end">
      <p class="card-text" id="note-date"><%= @task.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
  </div>

  <div class="d-flex justify-content-end p-3" style="width: 55rem">
    <%= link_to "Edit", edit_category_path, id:"edit-entry-link" %>
    <%= link_to "Show Notes", category_tasks_path(@category) %>
  </div>
  
</div>

<p>
  <%= link_to "Edit this task", edit_category_task_path(@category) %>
</p>
<p>
  <%= button_to "Delete", category_task_path(@category, @task), method: :delete %>
</p>