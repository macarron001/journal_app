<div class="d-flex flex-column justify-content-center align-items-center" id="category-show-wrapper">
  <div class="card" style="width: 70rem; height: 40rem">
    <div class="card-body">
      <div id="card-header" class="d-flex flex-column justify-content-center align-items-center p-3">
        <h2 class="card-title"><%= @category.created_at.strftime("%B %-d, %Y") %></h2>
        <p class="card-text"><%= @category.updated_at.strftime(" Last update: %B %d, %Y at %I:%M %p") %></p>
      </div>
      <div class="d-flex align-items-center p-5" id="entry-content">
        <p><%= @category.description %></p>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end p-3" style="width: 70rem">
    <%= link_to "Edit", edit_category_path, id:"edit-entry-link" %>
    <%= link_to "Show Notes", category_tasks_path(@category) %>
  </div>
  
</div>